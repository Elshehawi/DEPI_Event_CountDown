<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- CardView to hold the content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailedEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1231231230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0DFDF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/text_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Event Title"
                android:textColor="@color/blackk"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/text_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:text="This is a short description of the event."
                android:textColor="#444444"
                android:textSize="16sp" />

            <!-- Date & Time -->
            <TextView
                android:id="@+id/text_event_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="April 24, 2025 - 6:00 PM"
                android:textColor="#666666"
                android:textSize="20sp" />

            <!-- Countdown (in minutes) -->
            <TextView
                android:id="@+id/text_event_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:paddingVertical="10dp"
                android:text="Starts in 120 minutes"
                android:textColor="#00CCFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
